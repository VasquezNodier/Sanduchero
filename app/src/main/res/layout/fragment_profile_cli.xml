<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_back_uno"
    android:orientation="vertical"
    tools:context=".view.fragmentCli.ProfileCliFragment">


    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="190dp"
        android:layout_margin="10dp"
        android:backgroundTint="@color/colorWhite"
        app:cardCornerRadius="20dp">

        <ImageView
            android:id="@+id/img_Perfil"
            android:layout_width="wrap_content"
            android:layout_height="170dp"
            android:layout_margin="10dp"
            android:src="@drawable/img_landing" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_MisDatos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:backgroundTint="@color/colorPrimaryDark"
        app:cardCornerRadius="20dp">

        <TextView
            android:id="@+id/tx_MisDatos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:drawableLeft="@drawable/ic_datos"
            android:drawableRight="@drawable/ic_flecha_derecha"
            android:drawablePadding="16dp"
            android:gravity="center_vertical"
            android:paddingStart="8dp"
            android:text="@string/mis_datos"
            android:textColor="@color/colorWhite"
            android:textSize="18sp"
            app:drawableTint="@color/colorWhite" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_MisPedidos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:backgroundTint="@color/colorWhite"
        app:cardCornerRadius="20dp">

        <TextView
            android:id="@+id/tx_MisPedidos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:drawableLeft="@drawable/ic_shopping_cart"
            android:drawableRight="@drawable/ic_flecha_derecha"
            android:drawablePadding="16dp"
            android:gravity="center_vertical"
            android:paddingStart="8dp"
            android:text="@string/mis_pedidos"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp"
            app:drawableTint="@color/colorPrimaryDark" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_CerrarSesion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:backgroundTint="@color/colorPrimaryDark"
        app:cardCornerRadius="20dp">

        <TextView
            android:id="@+id/tx_CerrarSesion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:drawableLeft="@drawable/ic_salir"
            android:drawableRight="@drawable/ic_flecha_derecha"
            android:drawablePadding="16dp"
            android:gravity="center_vertical"
            android:paddingStart="8dp"
            android:text="@string/cerrar_sesion"
            android:textColor="@color/colorWhite"
            android:textSize="18sp"
            app:drawableTint="@color/colorWhite" />

    </androidx.cardview.widget.CardView>
</LinearLayout>